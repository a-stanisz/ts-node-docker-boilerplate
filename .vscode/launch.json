{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach 9229 --inspect",
      "type": "node",
      "request": "attach",
      "remoteRoot": "/opt/node_app",
      "port": 9229,
      "address": "0.0.0.0",
      "localRoot": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/dist/**/*.js", "!**/node_modules/**"],
      "restart": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"]
      // "outputCapture": "std"
    }
  ]
}
